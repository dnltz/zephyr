#include <dt-bindings/gpio/gpio.h>

/ {
	#address-cells = <1>;
	#size-cells = <1>;

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;
		cpu@0 {
			compatible = "vexriscv", "riscv";
			reg = <0>;
			device_type = "cpu";
			riscv,isa = "rv32i";
		};
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "vexriscv,vexriscv-soc", "simple-bus";
		ranges;

		uart0: uart0@f0010000 {
			compatible = "vexriscv,uart";
			reg = <0xF0010000 0x1000>;
			label = "uart0";
			clock-frequency = <50000000>;
			current-speed = <115200>;
			status = "disabled";
		};
	};
};
